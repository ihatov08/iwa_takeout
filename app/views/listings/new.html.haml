.container
  .row
    %blockquote.blockquote
      %p.mb-0 【いわていくあうと】では店舗情報を求めています！
      %p.mb-0 新型コロナウィルスをみなさんで乗り切りましょう！

    = form_with model: @listing, local: true do |f|
      .form-group
        = f.label :name
        = f.text_field :name, class: "form-control"
      .form-group
        = f.label :image
        = f.file_field :image, class: "form-control"
      .form-group
        = f.label :address
        = f.text_field :address, class: "form-control"
      .form-group
        = f.label :tel
        = f.text_field :tel, class: "form-control"
      .form-group
        = f.label :description
        = f.text_area :description, class: "form-control"
      .form-group
        = f.label :open_at
        = f.text_field :open_at, class: "form-control"
      .form-group
        = f.label :close_at
        = f.text_field :close_at, class: "form-control"
      .form-group
        = f.label :postal_code
        = f.text_field :postal_code, class: "form-control"
      .form-group
        = f.label :free_text
        = f.rich_text_area :free_text, class: "form-control"
      .form-group.form-check
        = f.label :holidays, "定休日"
        %br
        = f.collection_check_boxes :holiday_ids, DayOfWeek.all, :id, :name do |ff|
          = ff.label { ff.check_box + ff.text }
      = f.submit class: "btn btn-primary"
