<header class="header">
  <div class="container">
    <nav class="navbar navbar-expand-lg hamburger-menu">
      <%= link_to :root, class: "navbar-brand" do %>
        <h1><%= image_tag 'logo.png' %></h1>
      <% end %>
      <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="レスポンシブ・ナビゲーションバー">
      <span class="navbar-toggler-icon"><i class="fas fa-bars"></i></span>
      </button>
      <div class="collapse navbar-collapse text-right" id="Navber">
        <ul class="navbar-nav mx-auto mt-2 mt-lg-0">
        </ul>

        <div class="my-2 my-lg-0">
          <% if user_signed_in? %>
          <div class="dd-header dropdown float-left">
            <button type="button" class="btn dropdown-toggle" id="dropdownMenuButton2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.name %>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
              <%= link_to "リスティング一覧", mypage_listings_path, class: "dropdown-item" %>
            </div>
          </div>
            <%= image_tag current_user.avatar.url, class: "rounded-circle", size: "50x50" %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn p1" %>
          <% else %>
            <%= link_to "ログイン", new_user_session_path, class: "btn p1" %>
            <%= link_to "新規登録", new_user_registration_path, class: "btn p1" %>
          <% end %>
        </div>
      </div>
    </nav>
  </div>
</header>
