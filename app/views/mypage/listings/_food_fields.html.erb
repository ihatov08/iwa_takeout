<div class="nested-fields">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control filter-input" %>
      <%= f.label :main_image %>
      <%= image_tag(f.object.main_image.url) if f.object.main_image? %>
      <%= f.file_field :main_image, class: "form-control filter-input" %>
      <%= f.label :price %>
      <%= f.number_field :price, class: "form-control filter-input" %>
      <%= f.hidden_field :main_image_cache %>
      <br>
      <%= link_to_remove_association "メニューを削除", f, class: "btn btn-danger" %>
    </div>
  </div>
</div>
